<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'Tags', tags_path, class: "btn btn-info border rounded-pill" %>
<%= link_to 'Create a New Article', new_article_path, class: 'new_article bg-info' %>